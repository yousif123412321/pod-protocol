{
  "name": "pod-protocol",
  "version": "1.2.0",
  "description": "PoD Protocol (Prompt or Die): The ultimate AI Agent Communication Protocol on Solana",
  "private": true,
  "type": "module",
  "main": "index.js",
  "bin": {
    "pod": "cli/dist/index.js",
    "pod-com": "cli/dist/index.js"
  },
  "scripts": {
    "setup": "node scripts/setup-package-managers.js",
    "build": "node scripts/build.js",
    "build:safe": "node scripts/build.js anchor",
    "build:idl": "node scripts/build.js anchor",
    "build:full": "node scripts/build.js all",
    "build:verify": "node scripts/build.js all && yarn run verify:build",
    "build:all": "node scripts/build.js workspaces",
    "prebuild:all": "cd sdk && bun install && cd ../cli && bun install",
    "build:prod": "yarn run clean && yarn run build:all",
    "test": "cd sdk && bun run test && cd ../cli && bun run test",
    "test:bun": "cd sdk && bun run test && cd ../cli && bun run test",
    "test:all": "yarn run test && cd sdk && bun run test && cd ../cli && bun run test",
    "test:coverage": "cd sdk && bun run test:coverage && cd ../cli && bun run test:coverage",
    "deploy": "anchor deploy",
    "deploy:prod": "anchor deploy --provider.cluster mainnet-beta",
    "deploy:frontend": "./scripts/deploy-frontend.sh --preview",
    "deploy:frontend:prod": "./scripts/deploy-frontend.sh --production",
    "clean": "rm -rf target/ && cd sdk && bun run clean && cd ../cli && bun run clean",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" --write",
    "lint:all": "yarn run lint && cd sdk && bun run lint && cd ../cli && bun run lint",
    "dev": "cd sdk && bun run test && cd ../cli && bun run test",
    "docs": "anchor build && typedoc --out docs/api sdk/src/index.ts",
    "docs:build": "yarn run docs && cd sdk && bun run docs",
    "docs:deploy": "./scripts/deploy-docs.sh",
    "docs:dev": "cd docs && python3 -m http.server 8080",
    "docs:preview": "open http://localhost:8080 && npm run docs:dev",
    "verify:build": "bun scripts/verify-build.js",
    "production:test": "node scripts/production-test.js",
    "production:deploy": "yarn run production:test && yarn run build:prod",
    "ci:build": "yarn run build:verify && yarn run build:all",
    "ci:test": "yarn run test:all && yarn run lint:all",
    "validate:workflows": "node scripts/validate-workflows.js",
    "pretest": "node scripts/check-dependencies.js && yarn run build:verify",
    "prepublishOnly": "yarn run production:test && yarn run build:all"
  },
  "keywords": [
    "solana",
    "anchor",
    "ai-agents",
    "agent-communication",
    "blockchain-protocol",
    "web3",
    "decentralized",
    "messaging",
    "prompt-or-die",
    "pod-protocol",
    "typescript",
    "rust",
    "sdk",
    "cli"
  ],
  "author": "PoD Protocol Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dexploarer/PoD-Protocol.git"
  },
  "bugs": {
    "url": "https://github.com/Dexploarer/PoD-Protocol/issues"
  },
  "homepage": "https://github.com/Dexploarer/PoD-Protocol#readme",
  "workspaces": [
    "sdk",
    "cli"
  ],
  "dependencies": {
    "@coral-xyz/anchor": "0.31.1",
    "@pod-protocol/cli": "1.4.0",
    "@pod-protocol/sdk": "^1.2.0",
    "@solana/web3.js": "1.98.2",
    "@solana/wallet-adapter-base": "0.9.27",
    "chalk": "5.4.1",
    "commander": "14.0.0",
    "inquirer": "12.6.3",
    "keccak": "3.0.4",
    "ora": "8.2.0",
    "qrcode-terminal": "0.12.0",
    "table": "6.9.0"
  },
  "devDependencies": {
    "@coral-xyz/anchor-cli": "0.31.2",
    "@jest/globals": "30.0.2",
    "@types/bn.js": "5.2.0",
    "@types/chai": "5.2.2",
    "@types/chai-as-promised": "8.0.2",
    "@types/jest": "30.0.0",
    "@types/connect": "3.4.29",
    "@types/estree": "1.0.8",
    "@types/istanbul-lib-report": "3.0.3",
    "@types/istanbul-reports": "3.0.4",
    "@types/json-schema": "7.0.15",
    "@types/mocha": "10.0.10",
    "@types/node": "22.15.32",
    "chai": "5.2.0",
    "chai-as-promised": "8.0.1",
    "mocha": "11.7.0",
    "prettier": "3.5.3",
    "ts-mocha": "10.1.0",
    "typedoc": "0.25.13",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
